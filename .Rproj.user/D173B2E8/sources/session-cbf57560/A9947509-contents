library(tidyverse)

data <- readr::read_csv('https://dataverse.harvard.edu/api/access/datafile/10143569')

selected_data <- data %>% 
  select(year, Country, outbreak_event, cattle_meat_tonnes, chicken_meat_tonnes, pigs_meat_tonnes)

filtered_data <- subset(selected_data, Country == "China")

filtered_data$total_meat_production <- rowSums(filtered_data[, c("cattle_meat_tonnes", "chicken_meat_tonnes", "pigs_meat_tonnes")])

library(ggplot2)

ggplot(filtered_data, aes(x = total_meat_production, y = outbreak_event)) +
  geom_point() +
  labs(x = "Total Meat Production", y = "Disease Outbreak") +
  ggtitle("Relationship between Meat Production and Disease Outbreak")

ggplot(filtered_data, aes(x = cattle_meat_tonnes, y = outbreak_event)) +
  geom_point() +
  labs(x = "Total Meat Production", y = "Disease Outbreak") +
  ggtitle("Relationship between Meat Production and Disease Outbreak")

ggplot(filtered_data, aes(x = chicken_meat_tonnes, y = outbreak_event)) +
  geom_point() +
  labs(x = "Total Meat Production", y = "Disease Outbreak") +
  ggtitle("Relationship between Meat Production and Disease Outbreak")

